<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.invoiceapp.android">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="7557b39a51ced81728422eb057d5e0c5c1bff735"
            />
        <activity
            android:name=".view.activity.SplashActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".view.activity.GetStartedActivity"/>
        <activity
            android:name=".view.activity.login.LoginActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_login"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"/>
        <activity android:name=".view.activity.detailssection.DetailSectionMainActivity"/>
        <activity
            android:name=".view.activity.HomeActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_home"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"/>
        <activity
            android:name=".view.activity.createinvoice.CreateInvoiceActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_create_invoice"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"/>
        <activity
            android:name=".view.activity.createestimate.CreateEstimateActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"/>
        <activity
            android:name=".view.activity.businessdetails.BusinessDetailsActivity"
            android:label="@string/title_activity_business_details"
            android:theme="@style/AppTheme"/>
        <activity android:name=".view.activity.CreateNewClient"/>
        <activity android:name=".view.activity.InvoiceInfoActivity"/>
        <activity android:name=".view.activity.AddItemActivity"/>
        <activity android:name=".view.activity.DiscountActivity"/>
        <activity android:name=".view.activity.ShippingInfoActivity"/>
        <activity android:name=".view.activity.TaxesActivity"/>
        <activity android:name=".view.activity.FirstActivity">
        </activity>
    </application>

</manifest>